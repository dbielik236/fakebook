<div id="<%= dom_id post %>">
  <div class="card">
    <div class="card-header">
      <%= post.user.first_name%> <%=post.user.last_name %>
      <%= link_to "View Profile", user_path(post.user.id), class: "btn btn-primary" %>
      <br>
      <%= post.created_at.strftime("%B %d, %Y at %l:%M %P") %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= post.body %></p>

      <%= link_to "Comment", post, class: "btn btn-secondary" %>
    </div>
  </div>
  <br>
</div>
