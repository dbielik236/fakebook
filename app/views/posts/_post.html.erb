<div id="<%= dom_id post %>">
  <div class="card">
    <div class="card-header">
    
      <%= link_to (post.user.first_name + " " + post.user.last_name), user_path(post.user.id)%>
      <br>
      <%= post.created_at.strftime("%B %d, %Y at %l:%M %P") %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= post.body %></p>

      <%= link_to "Comment", post, class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
  <br>
</div>
