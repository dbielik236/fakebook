<div class="card text-center mx-auto" style="width: 20rem">
  <h2 class="card-header">fakebook</h2>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <br>
      <div class="field">
        <%= f.email_field :email, 
                          autofocus: true, 
                          autocomplete: "email", 
                          class:'form-control', 
                          placeholder: "Email" %>
      </div>
      <br>
      <div class="field">
        <%= f.password_field :password, 
                             autocomplete: "current-password", 
                             class:'form-control', 
                             placeholder: "Password" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class:'btn btn-primary', style: "width: 100%" %>
      </div>
    <% end %>
    <hr>
    <%= render "devise/shared/links" %>
  </div>  
</div>