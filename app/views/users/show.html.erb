
  <div class="card shadow-sm mx-auto" style="max-width:600px">
    <div class="card-body">
      <h2> <%= @user.first_name%> <%= @user.last_name%></h2>
      <p> <%= @user.friends(@user.id).count %> friends </p>
      <% if @user == current_user %>
        <%= link_to "Update profile", edit_user_path,class: "btn btn-primary" %>
      <% elsif current_user.friend?(@user.id, current_user.id) %>
      <div class="container-fluid">
        <div class="row">
          <div class="btn btn-primary col-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
            </svg>
            Friends
          </div>
         
          <div class="col-6">
            <%= button_to @friendship, method: :delete, class: "btn btn-danger", data: { action: "click->posts#delete" } do %>
              
                <span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                    <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                  </svg> Unfriend 
                </span>
               
            <% end %> 
          </div>
        </div>  
      </div>
       <% elsif current_user.friend_already_requested?(@user.id, current_user.id) %>
        <div class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
          <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
          </svg>
          Request sent
        </div> 
       <% elsif current_user.friend_already_invited?(@user.id, current_user.id) %>
         <%= link_to "Accept friend request", users_path(current_user.id), class:"btn btn-success" %>
       <% else %>
         <%= button_to "Send friend request", friend_requests_path, method: :post, params: { recipient_id: @user.id }, class:"btn btn-primary"%>
       <% end %> 

    </div>
  </div>
<br>
<% if current_user.friend?(@user.id, current_user.id) || current_user == @user %>
  <div class="card shadow-sm mx-auto" style="max-width:600px">
    <div class="card-body">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Posts</a>
        </li>
        <li class="nav-item">
          <% if @user == current_user %>
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false"> My Friends</a>
          <% else %>
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false"> Friends</a>
          <% end %>  
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <br>
          <%= render 'about', user: @user %>
          <% if current_user == @user %>
            <br>
            <%= link_to 'Update account information', edit_user_registration_path, class: "btn btn-dark" %>
          <% end %>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <br>
          <% @user.posts.each do |post| %>
            <%= render post %>
          <% end %>
        </div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
          <br>
          <%= render 'friends', user: @user %>
        </div>
      </div>
    </div>
  </div>
<br>
<div class="card shadow-sm mx-auto" style="max-width:600px"> 
  <div class="card-body">
    <%= link_to "Back", :back, class: "btn btn-secondary" %>
   </div>
</div>
<br>  
<% else %>
  <div class="card shadow-sm mx-auto" style="max-width:600px">
    <h2 class="card-header">Info</h2>
    <div class="card-body">
      <% unless @user.location == "" || @user.location == nil %>
        <p>Lives in <strong><%= @user.location %></p></strong>
      <% end %>
      <% unless @user.birthday == "" || @user.birthday == nil %>
        <p>Birthday <strong><%= @user.birthday.strftime("%B %d, %Y") %></p></strong>
      <% end %>
    </div>
  </div>
  <br>  
<div class="card shadow-sm mx-auto" style="max-width:600px"> 
  <div class="card-body">
    <%= link_to "Back", :back, class: "btn btn-secondary" %>
   </div>
</div>
<% end %>